{
  "name": "return-youtube-dislike",
  "version": "1.1.0",
  "description": "Returns ability to see dislikes",
  "repository": "https://github.com/Anarios/return-youtube-dislike/",
  "author": "Dmitrii Selivanov",
  "license": "GPLv3",
  "private": true,
  "scripts": {
    "build": "parcel build src/browser-extension/manifest.json --no-content-hash --no-source-maps --dist-dir dist --no-cache --detailed-report 0",
    "watch": "parcel watch src/browser-extension/manifest.json --no-source-maps --dist-dir dist --no-cache --detailed-report 0",
    "lint": "run-p 'lint:*'",
    "lint:ts": "eslint --ext ts Extensions/browser",
    "lint:css": "stylelint 'Extensions/browser/*.css'",
    "lint-fix": "run-p 'lint:* --fix'",
    "test": "run-p lint:* build"
  },
  "dependencies": {
    "webextension-polyfill": "^0.8.0"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "eslint": "^8.4.1",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.1",
    "stylelint": "^14.1.0",
    "stylelint-config-standard": "^24.0.0",
    "typescript": "^4.5.2"
  },
  "browserslist": [
    "last 1 Chrome version",
    "last 1 Firefox version"
  ]
}
