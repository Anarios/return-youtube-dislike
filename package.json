{
  "name": "return-youtube-dislike",
  "version": "1.1.0",
  "description": "Returns ability to see dislikes",
  "repository": "https://github.com/Anarios/return-youtube-dislike/",
  "author": "Dmitrii Selivanov",
  "license": "GPLv3",
  "private": true,
  "scripts": {
    "build": "parcel build Extensions/browser/manifest.json --no-content-hash --no-source-maps --dist-dir dist --no-cache --detailed-report 0",
    "watch": "parcel watch Extensions/browser/manifest.json --dist-dir dist --detailed-report 0 --no-cache --no-hmr",
    "lint": "run-p 'lint:*'",
    "lint:ts": "eslint --ext ts Extensions/browser",
    "lint:css": "stylelint 'Extensions/browser/*.css'",
    "lint-fix": "run-p 'lint:* -- --fix'",
    "test": "run-p lint:* build",
    "preversion": "yarn test",
    "postversion": "ts-node Scripts/version_incrementer.ts && echo \"Upgraded to version $npm_package_version\""
  },
  "dependencies": {
    "@types/node": "^16.11.12",
    "dotenv": "^10.0.0",
    "ts-node": "^10.4.0",
    "webextension-polyfill": "^0.8.0"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "eslint": "^8.4.1",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.1",
    "stylelint": "^14.1.0",
    "stylelint-config-standard": "^24.0.0",
    "typescript": "^4.5.3"
  },
  "browserslist": [
    "last 1 Chrome version",
    "last 1 Firefox version"
  ]
}
